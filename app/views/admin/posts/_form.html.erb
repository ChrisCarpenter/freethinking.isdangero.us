<% tpl_form_for [:admin, @post] do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :body %>
  <%= f.text_field :slug %>
  <%= f.text_field :tag_list %>
  <%= f.select :status, [['Draft', Post::DRAFT], ['Published', Post::PUBLISHED]] %>
  <%= hidden_field_tag '_redirect_on[success]', admin_posts_path %>
  <%= f.submit 'Save' %>
<% end %>